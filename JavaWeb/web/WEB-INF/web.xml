<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


<welcome-file-list>
    <welcome-file>index.html</welcome-file>
</welcome-file-list>

    <!--连接服务端的配置信息 -->

<!--让tomcat创建的 servlet 对象-->
<servlet>
    <servlet-name>MyServlet</servlet-name> <!--用类名作别名-->
    <servlet-class>com.alibaba.web.servlet.MyServlet</servlet-class>
</servlet>

    <!--告诉tomcat对应哪些请求-->
<servlet-mapping>
    <servlet-name>MyServlet</servlet-name>
    <url-pattern>/changeName</url-pattern>
</servlet-mapping>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.alibaba.web.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>  <!--可以配置响应多个请求-->
    </servlet-mapping>


    <servlet>
        <servlet-name>LoginServletByCheck</servlet-name>
        <servlet-class>com.alibaba.web.servlet.LoginServletByCheck</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServletByCheck</servlet-name>
        <url-pattern>/check</url-pattern>  <!--可以配置响应多个请求-->
    </servlet-mapping>

</web-app>